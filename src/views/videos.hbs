{{#each videos}}
<div id="preview" onclick="watchPreview(this,'{{miniature}}')">
    <div class="row mt-3 hover p-1">
        <div class="col-md-2">
            <img src="http://localhost:4000/video/miniature/{{miniature}}.png" alt="" class="img-thumbnail"
                style="width:400px;">
        </div>
        <div class="col-md-10">
            <h4 class="font-weight-bold">{{title}}</h4>
            <p class="text-truncate">{{description}}</p>
            <div class="">
                <p class="font-weight-bold">{{Height}}/{{width}}</p>
                <p class="font-weight-bold">{{min}}:{{seg}}</p>
            </div>
        </div>
    </div>
</div>
{{>video-modal}}
{{/each}}