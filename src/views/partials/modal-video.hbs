<div id="video-modal" class="modal">
    <div class="content-modal">
        <div id="close" class="close" onclick="closeVideoModal(this)">&times;</div>
        <div class="card">

            <video class="video-modal card-img-top" autoplay controls id="video-preview"  src=""></video>

            <div class="card-body">
                <div class="card-title">
                    <h4 class="text-capitalize">{{title}}</h4>
                </div>
                <div class="card-text">
                    <p>{{description}}</p>
                </div>
                
                <div class="card-text">
                    <form action="/video/payment/{{_id}}" method="GET">
                        <div class="form-group">
                            <button type="submit" data="{{_id}}" class="btn btn-success">Comprar {{unitAmount price}}</button>
                        </div>
                    </form>
                </div>
                <small>Subido: {{timeago timestamp}}</small>
            </div>
        </div>
    </div>
</div>