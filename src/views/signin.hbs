{{#if signinMessage}}
<div class="alert alert-danger">
    {{signinMessage}}
</div>
{{/if}}

<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh" ;>
    <div class="card" style="width: 30rem">
        <div class="card-header"><h1 class="text-primary">Iniciar sesion</h1></div>
        <div class="card-body">
            <form action="/signin" method="POST">
                <div class=" form-group">
                    <label for="exampleInputEmail1">Correo o usuario</label>
                    <input type="email" class="form-control" name="email" placeholder="Escriba correo o usuario">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Contraseña</label>
                    <input type="password" class="form-control" name="password" placeholder="Escriba contraseña">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">SignIn</button>
                </div>
            </form>
        </div>
    </div>
</div>