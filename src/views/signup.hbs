{{#if signupMessage}}
<div class="alert alert-danger">
    {{signupMessage}}
</div>
{{/if}}

<div class="d-flex align-items-center justify-content-center mt-2" style="min-height: 100vh;">
    <div class="card shadow-sm" style="width: 30rem">
        <div class="card-header">
            <h1 class="text-primary">Registrar</h1>
        </div>
        <div class="card-body">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" name="name" placeholder="Escriba nombre">
                </div>
                <div class="form-group">
                    <label for="">Apellido</label>
                    <input type="text" class="form-control" name="lastName" placeholder="Escriba apellido">
                </div>
                <div class=" form-group">
                    <label for="">Correo</label>
                    <input type="email" class="form-control" name="email" placeholder="Escriba correo">
                </div>
                <div class="form-group">
                    <label for="">Nombre de usuario</label>
                    <input type="text" class="form-control" name="user" placeholder="Escriba usuario">
                </div>
                <div class="form-group">
                    <label for="">Contrase単a</label>
                    <input type="password" class="form-control" name="password" placeholder="Escriba contrase単a">
                </div>
                <div class="form-group">
                    <label for="">Repetir contrase単a</label>
                    <input type="password" class="form-control" name="password1" placeholder="Repita contrase単a">
                </div>
                <div class="form-group">
                    <input type="checkbox" class="form-check" name="role">
                    Convertirse en vendedor
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">SignUp</button>
                </div>
            </form>
        </div>
    </div>